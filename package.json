{
  "name": "openqasm-debug",
  "displayName": "OpenQASM Debugger",
  "version": "0.93.0",
  "publisher": "QuantagITSolutionsGmbH",
  "description": "Extension for OpenQASM, Qiskit, pyTKET and CUDA-Q debug adapters for VS Code.",
  "author": {
    "name": "Quantag IT Solutions GmbH"
  },
  "license": "MIT",
  "keywords": [
    "qiskit",
    "tket",
    "cuda-q",
    "qasm",
    "python"
  ],
  "engines": {
    "vscode": "^1.66.0"
  },
  "icon": "images/openqasm-debug-icon.png",
  "categories": [
    "Debuggers",
    "Language Packs"
  ],
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/quantag/qasm-adapter-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/quantag/qasm-adapter-vscode/issues"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js",
    "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
    "esbuild-web": "esbuild ./src/web-extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/web-extension.js",
    "watch-web": "npm run -S esbuild-web -- --sourcemap --sources-content=false --watch",
    "build": "npm run -S esbuild-base -- --sourcemap --sources-content=false && npm run -S esbuild-web -- --sourcemap --sources-content=false",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish-pre-release": "vsce publish --pre-release",
    "vscode:prepublish": "rimraf dist && npm run -S esbuild-base -- --minify && npm run -S esbuild-web -- --minify",
    "test": "npm run typecheck"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.18.63",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/debugadapter-testsupport": "^1.56.0",
    "await-notify": "^1.0.1",
    "base64-js": "^1.5.1",
    "esbuild": "^0.14.29",
    "eslint": "^8.12.0",
    "events": "^3.3.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "path-browserify": "^1.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "url": "^0.11.0",
    "vsce": "^2.7.0"
  },
  "main": "./dist/extension.js",
  "browser": "./dist/web-extension.js",
  "activationEvents": [
    "onDebugResolve:mock",
    "onDebugDynamicConfigurations:mock",
    "onCommand:extension.mock-debug.getProgramName",
    "onStartupFinished",
    "onLanguage:python",
    "onLanguage:cpp",
    "onCommand:quantag.guppy.compileOne",
    "onCommand:quantag.guppy.compileAllInFile"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "capabilities": {
    "virtualWorkspaces": true
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Remote Files Settings",
      "properties": {
        "remoteFiles.baseUrl": {
          "type": "string",
          "default": "https://cryspprod3.quantag-it.com:444/api2",
          "description": "Base URL of the remote file system API."
        }
      }
    },
    "menus": {
      "editor/title/run": [
        {
          "command": "extension.mock-debug.runEditorContents",
          "when": "resourceLangId == openqasm",
          "group": "navigation@1"
        },
        {
          "command": "extension.mock-debug.debugEditorContents",
          "when": "resourceLangId == openqasm",
          "group": "navigation@2"
        },
        {
          "command": "extension.mock-debug.runEditorContents",
          "when": "resourceLangId == python",
          "group": "navigation@1"
        },
        {
          "command": "extension.mock-debug.debugEditorContents",
          "when": "resourceLangId == python",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.mock-debug.debugEditorContents",
          "when": "resourceLangId == openqasm"
        },
        {
          "command": "quantagStudio.show3dVisualizer",
          "when": "resourceLangId == openqasm"
        },
        {
          "command": "extension.mock-debug.runEditorContents",
          "when": "resourceLangId == openqasm"
        },
        {
          "command": "extension.mock-debug.debugEditorContents",
          "when": "resourceLangId == python"
        },
        {
          "command": "extension.mock-debug.runEditorContents",
          "when": "resourceLangId == python"
        },
        {
          "command": "extension.mock-debug.getCircuitImage",
          "when": "resourceLangId == python || resourceLangId == openqasm"
        },
        {
          "command": "extension.mock-debug.getCircuitHtml",
          "when": "resourceLangId == python"
        },
        {
          "command": "extension.mock-debug.openCircuitWeb",
          "when": "resourceLangId == python || resourceLangId == openqasm"
        },
        {
          "command": "extension.mock-debug.QASMtoQIR",
          "when": "resourceLangId == python || resourceLangId == openqasm"
        }
      ],
      "debug/variables/context": [
        {
          "command": "extension.mock-debug.toggleFormatting",
          "when": "debugType == 'mock' && debugProtocolVariableMenuContext == 'simple'"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.mock-debug.debugEditorContents",
        "title": "Debug Circuit",
        "category": "Mock Debug",
        "enablement": "!inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "quantag.guppy.compileOne",
        "category": "Quantag Studio",
        "title": "Compile Guppy Function"
      },
      {
        "command": "quantagStudio.cudaq.runKernel",
        "category": "Quantag Studio",
        "title": "Run CUDA-Q Kernel"
      },
      {
        "command": "quantag.guppy.compileAllInFile",
        "category": "Quantag Studio",
        "title": "Compile All Guppy Functions in File"
      },
      {
        "command": "quantagStudio.show3dVisualizer",
        "category": "Quantag Studio",
        "title": "3D Circuit Visualizer"
      },
      {
        "command": "remoteFiles.openRemote",
        "category": "Quantag Studio",
        "title": "Open Remote File Explorer"
      },
      {
        "command": "quantagStudio.authWithGoogle",
        "title": "Auth with Google",
        "category": "Quantag Studio"
      },
      {
        "command": "quantagStudio.optimizeQasmPyZX",
        "title": "Optimize QASM with PyZX",
        "category": "Quantag Studio"
      },
      {
        "command": "quantagStudio.renderQasmPyZX",
        "title": "Render QASM Diagram with PyZX",
        "category": "Quantag Studio"
      },
      {
        "command": "quantagStudio.logout",
        "title": "Logout",
        "category": "Quantag Studio"
      },
      {
        "command": "extension.mock-debug.runEditorContents",
        "title": "Run Circuit",
        "category": "Mock Debug",
        "enablement": "!inDebugMode",
        "icon": "$(play)"
      },
      {
        "command": "extension.mock-debug.buildTargetIBMQ",
        "title": "Run on IBM Quantum",
        "category": "Quantag Studio",
        "icon": "$(play)"
      },
      {
        "command": "extension.mock-debug.runOnZISimulator",
        "title": "Run on Zurich Instruments Simulator",
        "category": "Quantag Studio",
        "enablement": "!inDebugMode",
        "icon": "$(play)"
      },
      {
        "command": "extension.mock-debug.getCircuitImage",
        "title": "Render OpenQASM/Qiskit circuit",
        "category": "Quantag Studio",
        "icon": "$(play)"
      },
      {
        "command": "extension.mock-debug.getCircuitHtml",
        "title": "Render TKET circuit",
        "category": "Quantag Studio",
        "icon": "$(play)"
      },
      {
        "command": "extension.mock-debug.openCircuitWeb",
        "title": "Open Web Circuit",
        "category": "Quantag Studio",
        "icon": "$(play)"
      },
      {
        "command": "extension.mock-debug.QASMtoQIR",
        "title": "QASM to QIR",
        "category": "Quantag Studio",
        "icon": "$(play)"
      },
      {
        "command": "extension.mock-debug.toggleFormatting",
        "title": "Toggle between decimal and hex formatting"
      }
    ],
    "breakpoints": [
      {
        "language": "openqasm"
      },
      {
        "language": "python"
      }
    ],
    "languages": [
      {
        "id": "openqasm",
        "aliases": [
          "OpenQASM"
        ],
        "extensions": [
          ".qasm"
        ]
      },
      {
        "id": "python",
        "aliases": [
          "python"
        ],
        "extensions": [
          ".py"
        ]
      }
    ],
    "codeLensProviders": [
      {
        "language": "python"
      }
    ],
    "grammars": [
      {
        "language": "openqasm",
        "scopeName": "source.openqasm",
        "path": "./openqasm.tmLanguage.json"
      }
    ],
    "debuggers": [
      {
        "type": "mock",
        "languages": [
          "openqasm",
          "python"
        ],
        "label": "OpenQASM Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              },
              "compileError": {
                "type": "string",
                "description": "Simulates a compile error in 'launch' request.",
                "enum": [
                  "default",
                  "show",
                  "hide"
                ],
                "enumDescriptions": [
                  "default: show fake compile error to user",
                  "show fake compile error to user",
                  "do not show fake compile error to user"
                ]
              }
            }
          },
          "attach": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after attach.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              },
              "compileError": {
                "type": "string",
                "description": "Simulates a compile error in 'attach' request.",
                "enum": [
                  "default",
                  "show",
                  "hide"
                ],
                "enumDescriptions": [
                  "default: show fake compile error to user",
                  "show fake compile error to user",
                  "do not show fake compile error to user"
                ]
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "mock",
            "request": "launch",
            "name": "Ask for file name",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "OpenQASM Debug: Launch",
            "description": "A new configuration for 'debugging' a user selected OpenQASM file.",
            "body": {
              "type": "mock",
              "request": "launch",
              "name": "Ask for file name",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.mock-debug.getProgramName"
        }
      }
    ]
  },
  "dependencies": {
    "google-auth-library": "^10.2.1",
    "node-fetch": "^2.7.0"
  }
}
